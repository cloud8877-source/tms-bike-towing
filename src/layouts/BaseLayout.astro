---
import { getRelativeLocaleUrl } from "astro:i18n";
import { locales, getLocaleFromUrl } from "../i18n/utils";
import { t } from "../i18n/translations";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import WhatsAppButton from "../components/WhatsAppButton.svelte";
import EmergencyBar from "../components/EmergencyBar.svelte";
import ScrollAnimations from "../components/ScrollAnimations.astro";
import type { Locale } from "../i18n/utils";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const currentLocale = Astro.currentLocale || getLocaleFromUrl(Astro.url);
const {
  title = t(currentLocale, "site.title"),
  description = t(currentLocale, "site.description"),
} = Astro.props;

// Get the path without locale prefix for hreflang generation
const pathWithoutLocale =
  Astro.url.pathname.replace(/^\/(en|ms|zh|th)/, "") || "/";
---

<!doctype html>
<html lang={currentLocale} class="light">
  <head>
    <!-- Reset scroll position FIRST before anything else -->
    <script is:inline>
      // Disable browser scroll restoration
      if (history.scrollRestoration) {
        history.scrollRestoration = "manual";
      }
      // Scroll to top immediately
      window.scrollTo(0, 0);
      // Also handle pageshow (back/forward cache)
      window.addEventListener("pageshow", function (e) {
        if (e.persisted) {
          window.scrollTo(0, 0);
        }
      });
      // Force scroll on load as backup
      window.addEventListener("load", function () {
        window.scrollTo(0, 0);
      });
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Hreflang tags for international SEO -->
    {
      locales.map((locale) => (
        <link
          rel="alternate"
          hreflang={locale}
          href={
            new URL(
              getRelativeLocaleUrl(locale, pathWithoutLocale),
              Astro.site || Astro.url.origin,
            ).href
          }
        />
      ))
    }
    <link
      rel="alternate"
      hreflang="x-default"
      href={new URL(
        getRelativeLocaleUrl("en", pathWithoutLocale),
        Astro.site || Astro.url.origin,
      ).href}
    />

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url.href} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta
      property="og:image"
      content={new URL(
        "/images/hero-banner.jpg",
        Astro.site || Astro.url.origin,
      ).href}
    />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Theme Color -->
    <meta name="theme-color" content="#f5f7f8" />

    <!-- Fonts: Inter & Material Symbols -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="min-h-screen text-[#101418] flex flex-col font-display selection:bg-primary selection:text-white overflow-x-hidden transition-colors duration-300 relative"
  >
    <!-- Living Geography Background System -->
    <div
      id="bg-canvas"
      class="fixed inset-0 -z-50 overflow-hidden pointer-events-none"
    >
      <!-- 1. Diamond Spotlight (Crystal Shine) -->
      <div
        class="absolute top-[-20%] left-[20%] right-[20%] h-[80vh] bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-white via-white/60 to-transparent z-[1] opacity-90 blur-3xl pointer-events-none"
      >
      </div>

      <!-- 2. Icy Breathing Blobs -->
      <div
        class="blob bg-[#67E8F9]/40 w-[600px] h-[600px] top-[-100px] left-[-100px] blob-delay-1 mix-blend-multiply blur-[100px]"
      >
      </div>
      <div
        class="blob bg-[#7DD3FC]/40 w-[500px] h-[500px] top-[10%] right-[-100px] blob-delay-2 mix-blend-multiply blur-[100px]"
      >
      </div>
      <div
        class="blob bg-[#A5B4FC]/40 w-[600px] h-[600px] bottom-[-100px] left-[10%] blob-delay-3 mix-blend-multiply blur-[100px]"
      >
      </div>

      <!-- 3. Abstract Map Texture (Subtle) -->
      <div class="absolute inset-0 bg-topo opacity-[0.03]"></div>

      <!-- 4. Cinematic Grain (Texture) -->
      <div class="absolute inset-0 bg-noise opacity-[0.03]"></div>

      <!-- 5. Frosted Glass Overlay (Crystal Clarity) -->
      <div class="absolute inset-0 bg-white/60 backdrop-blur-[2px]"></div>
    </div>

    <Header />
    <main class="flex-1 relative z-10">
      <slot />
    </main>
    <Footer />

    <WhatsAppButton client:load locale={currentLocale as Locale} />
    <EmergencyBar client:load locale={currentLocale as Locale} />
    <ScrollAnimations />
  </body>
</html>
