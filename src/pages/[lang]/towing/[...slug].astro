---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import {
  locales,
  getLocaleFromUrl,
  getWhatsAppUrl,
  type Locale,
} from "../../../i18n/utils";
import { t } from "../../../i18n/translations";
import {
  allLocations,
  getLocationBySlug,
  getRelatedLocations,
  type LocationData,
  type RouteData,
  type CityData,
} from "../../../data/locations";

export function getStaticPaths() {
  const paths: { params: { lang: string; slug: string } }[] = [];

  for (const locale of locales) {
    for (const location of allLocations) {
      paths.push({
        params: { lang: locale, slug: location.slug },
      });
    }
  }

  return paths;
}

const { slug } = Astro.params;
const locale = getLocaleFromUrl(Astro.url) as Locale;
const location = getLocationBySlug(slug as string);

if (!location) {
  return Astro.redirect(`/${locale}/towing`);
}

const isRoute = location.type === "route";
const relatedLocations = getRelatedLocations(location);

// Helper to get country name in current locale
function getCountryName(country: string): string {
  return t(locale, `seo.countries.${country}`);
}

// Generate page title and description
let pageTitle: string;
let pageDescription: string;
let heroTitle: string;

if (isRoute) {
  const route = location as RouteData;
  pageTitle = t(locale, "seo.routeTitle")
    .replace("{origin}", route.origin)
    .replace("{destination}", route.destination);
  pageDescription = t(locale, "seo.routeDescription")
    .replace("{origin}", route.origin)
    .replace("{destination}", route.destination);
  heroTitle = t(locale, "seo.heroRoute")
    .replace("{origin}", route.origin)
    .replace("{destination}", route.destination);
} else {
  const city = location as CityData;
  pageTitle = t(locale, "seo.cityTitle").replace("{city}", city.name);
  pageDescription = t(locale, "seo.cityDescription")
    .replace("{city}", city.name)
    .replace("{country}", getCountryName(city.country));
  heroTitle = t(locale, "seo.heroCity").replace("{city}", city.name);
}

// FAQ content
function getFaqContent(): { question: string; answer: string }[] {
  if (isRoute) {
    const route = location as RouteData;
    return [
      {
        question: t(locale, "seo.faq.routeQ1")
          .replace("{origin}", route.origin)
          .replace("{destination}", route.destination),
        answer: t(locale, "seo.faq.routeA1").replace(
          "{time}",
          route.estimatedTime || "varies"
        ),
      },
      {
        question: t(locale, "seo.faq.routeQ2"),
        answer: t(locale, "seo.faq.routeA2"),
      },
    ];
  } else {
    const city = location as CityData;
    return [
      {
        question: t(locale, "seo.faq.cityQ1").replace("{city}", city.name),
        answer: t(locale, "seo.faq.cityA1").replace("{city}", city.name),
      },
      {
        question: t(locale, "seo.faq.cityQ2").replace("{city}", city.name),
        answer: t(locale, "seo.faq.cityA2"),
      },
    ];
  }
}

const faqItems = getFaqContent();

// Country flag emoji mapping
