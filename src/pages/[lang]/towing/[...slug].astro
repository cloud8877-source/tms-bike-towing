---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section
    class="relative min-h-[45vh] flex items-center overflow-hidden bg-gradient-to-br from-primary-dark via-primary to-primary-light"
  >
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute inset-0 bg-[url('/images/pattern-grid.svg')] bg-repeat"
      >
      </div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 relative z-10 py-20">
      <div class="max-w-3xl mx-auto text-center">
        <!-- Breadcrumb -->
        <nav class="flex items-center justify-center gap-2 text-white/60 text-sm mb-6 reveal">
          <a href={`/${locale}`} class="hover:text-white transition-colors"
            >{t(locale, "nav.home")}</a
          >
          <span>/</span>
          <a
            href={`/${locale}/towing`}
            class="hover:text-white transition-colors"
            >{t(locale, "nav.towing")}</a
          >
          <span>/</span>
          <span class="text-white"
            >{isRoute
              ? `${(location as RouteData).origin} â†’ ${(location as RouteData).destination}`
              : (location as CityData).name}</span
          >
        </nav>

        <!-- Country Flags -->
        {
          isRoute ? (
            <div class="flex items-center justify-center gap-4 mb-6 reveal">
              <span class="text-5xl">
                {countryFlags[(location as RouteData).originCountry]}
              </span>
              <span class="material-symbols-outlined text-white/60 text-3xl">
                arrow_forward
              </span>
              <span class="text-5xl">
                {countryFlags[(location as RouteData).destinationCountry]}
              </span>
            </div>
          ) : (
            <div class="flex items-center justify-center gap-2 mb-6 reveal">
              <span class="text-5xl">
                {countryFlags[(location as CityData).country]}
              </span>
              {(location as CityData).isBase && (
                <span class="px-3 py-1 bg-white/20 rounded-full text-white text-xs font-bold">
                  {t(locale, "seo.ourBase")}
                </span>
              )}
              {(location as CityData).isBorder && (
                <span class="px-3 py-1 bg-white/20 rounded-full text-white text-xs font-bold">
                  {t(locale, "seo.borderCrossing")}
                </span>
              )}
            </div>
          )
        }

        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-6 reveal"
        >
          {heroTitle}
        </h1>

        {
          isRoute && (location as RouteData).distance && (
            <div class="flex flex-wrap items-center justify-center gap-6 text-white/80 mb-8 reveal">
              <div class="flex items-center gap-2">
                <span class="material-symbols-outlined">straighten</span>
                <span>
                  {t(locale, "seo.distance")}:{" "}
                  {(location as RouteData).distance}
                </span>
              </div>
              {(location as RouteData).estimatedTime && (
                <div class="flex items-center gap-2">
                  <span class="material-symbols-outlined">schedule</span>
                  <span>
                    {t(locale, "seo.estimatedTime")}:{" "}
                    {(location as RouteData).estimatedTime}
                  </span>
                </div>
              )}
            </div>
          )
        }

        <!-- CTA Buttons -->
        <div
          class="flex flex-col sm:flex-row items-center justify-center gap-4 reveal"
        >
          <a
            href={getWhatsAppUrl(locale)}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-3 bg-[#25D366] text-white px-8 py-4 rounded-xl font-bold hover:scale-105 transition-all shadow-lg"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
