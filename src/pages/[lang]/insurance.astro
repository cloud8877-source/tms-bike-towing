---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { locales, getLocaleFromUrl, getWhatsAppUrl, type Locale } from "../../i18n/utils";
import { t } from "../../i18n/translations";

export function getStaticPaths() {
  return locales.map((lang) => ({ params: { lang } }));
}

const locale = getLocaleFromUrl(Astro.url) as Locale;

const insuranceTypes = [
  {
    icon: 'verified_user',
    titleKey: 'insurance.compulsory_title',
    descKey: 'insurance.compulsory_desc',
    noteKey: 'insurance.compulsory_note',
  },
  {
    icon: 'shield',
    titleKey: 'insurance.voluntary_title',
    descKey: 'insurance.voluntary_desc',
    noteKey: 'insurance.voluntary_note',
  }
];

const pricingImages = [
  { key: 'motorcycle', titleKey: 'insurance.motorcycle_title', src: '/images/pricing-motorcycle.jpg' },
  { key: 'car', titleKey: 'insurance.car_title', src: '/images/pricing-car.jpg' },
  { key: 'travel', titleKey: 'insurance.travel_title', src: '/images/pricing-travel.jpg' }
];
---

<BaseLayout title={`${t(locale, "nav.insurance")} - TMS Bike Towing`}>
  <!-- Hero -->
  <section class="relative min-h-[40vh] flex items-center overflow-hidden bg-surface-off">
    <div class="absolute inset-0">
      <img src="/images/hero-truck.jpg" alt="TMS Bike Towing" class="w-full h-full object-cover animate-slow-zoom" />
      <div class="absolute inset-0 bg-gradient-to-r from-ink-black/90 via-ink-black/75 to-ink-black/40"></div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 relative z-10 py-20">
      <div class="max-w-2xl">
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-white/10 text-white/70 text-sm font-medium mb-6 reveal">
          <span class="material-symbols-outlined text-sm">verified_user</span>
          {t(locale, 'nav.insurance')}
        </div>
        <h1 class="text-display text-5xl md:text-6xl text-white mb-6 reveal">
          {t(locale, 'insurance.title')}
        </h1>
        <p class="text-xl text-white/70 reveal">
          {t(locale, 'insurance.subtitle')}
        </p>
      </div>
    </div>
  </section>

  <!-- Types -->
  <section class="py-20">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="text-center mb-16 reveal">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 text-primary text-xs font-bold uppercase tracking-widest mb-4">
          <span class="material-symbols-outlined text-sm">shield</span>
          Coverage Types
        </div>
        <h2 class="text-3xl lg:text-5xl font-black max-w-3xl mx-auto text-text-main dark:text-white">
          {t(locale, 'insurance.types_title')}
        </h2>
        <p class="text-lg mt-6 max-w-2xl mx-auto text-text-light dark:text-gray-400">
          {t(locale, 'insurance.types_subtitle')}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto stagger-children">
        {insuranceTypes.map((type) => (
          <div class="card-premium p-8 group">
            <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mb-6">
              <span class="material-symbols-outlined text-2xl text-primary">{type.icon}</span>
            </div>
            <h3 class="text-xl font-bold mb-3 text-text-main dark:text-white">{t(locale, type.titleKey)}</h3>
            <p class="text-text-light dark:text-gray-400 mb-4">{t(locale, type.descKey)}</p>
            <p class="text-sm text-primary font-bold">{t(locale, type.noteKey)}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Pricing -->
  <section class="py-20 border-t border-gray-100 dark:border-gray-800" id="pricing">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="text-center mb-16 reveal">
        <p class="text-primary font-semibold uppercase tracking-wider text-sm mb-4">Pricing</p>
        <h2 class="text-3xl lg:text-5xl font-black max-w-3xl mx-auto text-text-main dark:text-white">
          {t(locale, 'insurance.pricing_title')}
        </h2>
        <p class="text-lg mt-6 max-w-2xl mx-auto text-text-light dark:text-gray-400">
          {t(locale, 'insurance.pricing_subtitle')}
        </p>
      </div>

      <div class="max-w-4xl mx-auto space-y-12">
        {pricingImages.map((img, index) => (
          <div class="reveal" style={`transition-delay: ${index * 100}ms;`}>
            <h3 class="text-lg font-bold mb-4 flex items-center gap-3 text-text-main dark:text-white">
              <span class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center">
                <span class="material-symbols-outlined text-primary text-sm">receipt_long</span>
              </span>
              {t(locale, img.titleKey)}
            </h3>
            <div class="card-premium overflow-hidden p-0 border-none shadow-xl">
              <img src={img.src} alt={t(locale, img.titleKey)} class="w-full" onerror="this.style.display='none'" />
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-footer-dark relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-primary/20 via-transparent to-transparent"></div>
    
    <div class="container mx-auto px-4 sm:px-6 relative z-10 text-white">
      <div class="max-w-2xl mx-auto text-center">
        <div class="reveal">
          <h2 class="text-3xl lg:text-5xl font-black mb-4">
            {t(locale, 'insurance.cta_title')}
          </h2>
          <p class="text-white/60 text-lg mb-10">
            {t(locale, 'insurance.cta_subtitle')}
          </p>

          <div class="flex flex-col sm:flex-row justify-center gap-4 stagger-children">
            <a href={getWhatsAppUrl(locale)} target="_blank" rel="noopener noreferrer"
               class="flex items-center justify-center gap-3 bg-[#25D366] text-white px-8 py-4 rounded-xl font-bold hover:scale-105 transition-all">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              {t(locale, 'insurance.get_quote')}
            </a>
            <a href="tel:+66968873125"
               class="flex items-center justify-center gap-3 bg-white/10 text-white border border-white/20 px-8 py-4 rounded-xl font-bold hover:bg-white/20 transition-all">
              <span class="material-symbols-outlined">call</span>
              +66 96 887 3125
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
