---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { locales, getLocaleFromUrl, getWhatsAppUrl, type Locale } from "../../i18n/utils";
import { t } from "../../i18n/translations";

export function getStaticPaths() {
  return locales.map((lang) => ({ params: { lang } }));
}

const locale = getLocaleFromUrl(Astro.url) as Locale;

const serviceHighlights = [
  { icon: 'local_shipping', titleKey: 'about.service1_title', descKey: 'about.service1_desc' },
  { icon: 'verified_user', titleKey: 'about.service2_title', descKey: 'about.service2_desc' },
  { icon: 'schedule', titleKey: 'about.service3_title', descKey: 'about.service3_desc' },
];

const contactMethods = [
  { icon: 'call', labelKey: 'about.phone', value: '+66 96 887 3125', href: 'tel:+66968873125' },
  { icon: 'whatsapp', label: 'WhatsApp', value: '+66 96 887 3125', href: getWhatsAppUrl(locale), isSvg: true },
  { icon: 'email', labelKey: 'about.email', value: 'tmsbiketowing@gmail.com', href: 'mailto:tmsbiketowing@gmail.com' },
];

const socialLinks = [
  { name: 'Facebook', href: 'https://www.facebook.com/profile.php?id=61560761347672', icon: '<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>' },
  { name: 'TikTok', href: 'https://www.tiktok.com/@tms.bike.towing', icon: '<path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>' },
];
---

<BaseLayout title={`${t(locale, "nav.about")} - TMS Bike Towing`}>
  <!-- Hero -->
  <section class="relative min-h-[40vh] flex items-center overflow-hidden bg-surface-off">
    <div class="absolute inset-0">
      <img src="/images/hero-truck.webp" alt="TMS Bike Towing" class="w-full h-full object-cover animate-slow-zoom" loading="eager" />
      <div class="absolute inset-0 bg-gradient-to-r from-ink-black/90 via-ink-black/75 to-ink-black/40"></div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 relative z-10 py-20">
      <div class="max-w-2xl">
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-white/10 text-white/70 text-sm font-medium mb-6 reveal">
          <span class="material-symbols-outlined text-sm">info</span>
          {t(locale, 'nav.about')}
        </div>
        <h1 class="text-display text-5xl md:text-6xl text-white mb-6 reveal">
          {t(locale, 'about.title')}
        </h1>
        <p class="text-xl text-white/70 reveal">
          {t(locale, 'about.subtitle')}
        </p>
      </div>
    </div>
  </section>

  <!-- About Content -->
  <section class="py-20">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="max-w-3xl mx-auto">
        <div class="reveal">
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 text-primary text-xs font-bold uppercase tracking-widest mb-4">
            <span class="material-symbols-outlined text-sm">apartment</span>
            Who We Are
          </div>
          <h2 class="text-3xl lg:text-4xl font-black mb-6 text-text-main dark:text-white">{t(locale, 'about.who_title')}</h2>
          <p class="text-lg text-text-light dark:text-gray-400 mb-16">
            {t(locale, 'about.who_desc')}
          </p>
        </div>

        <!-- Services -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-16 stagger-children">
          {serviceHighlights.map((service) => (
            <div class="card-premium p-6 group">
              <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mb-5">
                <span class="material-symbols-outlined text-2xl text-primary">{service.icon}</span>
              </div>
              <h3 class="font-bold text-text-main dark:text-white mb-2">{t(locale, service.titleKey)}</h3>
              <p class="text-sm text-text-light dark:text-gray-400">{t(locale, service.descKey)}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Contact -->
  <section class="py-20 border-t border-gray-100 dark:border-gray-800">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12 reveal">
          <p class="text-primary font-semibold uppercase tracking-wider text-sm mb-4">Contact</p>
          <h2 class="text-3xl lg:text-4xl font-black text-text-main dark:text-white">{t(locale, 'about.contact_title')}</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 stagger-children">
          <!-- Contact Methods -->
          <div class="card-premium p-8">
            <h3 class="font-bold text-text-main dark:text-white mb-6">{t(locale, 'about.reach_us')}</h3>
            <div class="space-y-4">
              {contactMethods.map((method) => (
                <a href={method.href} target={method.href.startsWith('http') ? '_blank' : undefined}
                   class="flex items-center gap-4 p-3 -mx-3 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors group">
                  {method.isSvg ? (
                    <div class="w-10 h-10 rounded-lg bg-[#25D366]/10 flex items-center justify-center">
                      <svg class="w-5 h-5 text-[#25D366]" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                      </svg>
                    </div>
                  ) : (
                    <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                      <span class="material-symbols-outlined text-primary">{method.icon}</span>
                    </div>
                  )}
                  <div class="flex-1 min-w-0">
                    <p class="text-xs text-text-light dark:text-gray-400">{method.labelKey ? t(locale, method.labelKey) : method.label}</p>
                    <p class="font-bold text-text-main dark:text-white truncate">{method.value}</p>
                  </div>
                  <span class="material-symbols-outlined text-text-light opacity-0 group-hover:opacity-100 transition-opacity text-sm">arrow_forward</span>
                </a>
              ))}
            </div>
          </div>

          <!-- Location & Social -->
          <div class="card-premium p-8">
            <h3 class="font-bold text-text-main dark:text-white mb-6">{t(locale, 'about.location')}</h3>
            <div class="flex items-start gap-4 mb-8">
              <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center shrink-0">
                <span class="material-symbols-outlined text-primary">location_on</span>
              </div>
              <p class="text-text-light dark:text-gray-400 text-sm leading-relaxed">
                18 Janglon Soi 17 Samnak Kham,<br />
                Sadao District, Songkhla 90320,<br />
                Thailand
              </p>
            </div>

            <h3 class="font-bold text-text-main dark:text-white mb-4">{t(locale, 'about.follow_us')}</h3>
            <div class="flex gap-3">
              {socialLinks.map((social) => (
                <a href={social.href} target="_blank" rel="noopener noreferrer"
                   class="w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-800 flex items-center justify-center text-text-light hover:bg-primary hover:text-white transition-all"
                   aria-label={social.name}>
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" set:html={social.icon} />
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-footer-dark relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-primary/20 via-transparent to-transparent"></div>
    
    <div class="container mx-auto px-4 sm:px-6 relative z-10 text-white">
      <div class="max-w-2xl mx-auto text-center">
        <div class="reveal">
          <h2 class="text-3xl lg:text-5xl font-black mb-4 text-white">
            {t(locale, 'about.cta_title')}
          </h2>
          <p class="text-white/60 text-lg mb-10">
            {t(locale, 'about.cta_subtitle')}
          </p>
          <a href={getWhatsAppUrl(locale)} target="_blank" rel="noopener noreferrer"
             class="inline-flex items-center gap-3 bg-[#25D366] text-white px-8 py-4 rounded-xl font-bold hover:scale-105 transition-all">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            {t(locale, 'about.contact_now')}
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
