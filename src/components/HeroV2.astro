---
import { getLocaleFromUrl, getWhatsAppUrl, type Locale } from "../i18n/utils";
import { t } from "../i18n/translations";
import FlagCarousel from "./FlagCarousel.svelte";

const locale = (Astro.currentLocale || getLocaleFromUrl(Astro.url)) as Locale;
---

<section class="relative min-h-screen w-full overflow-hidden">
  <!-- Main content area -->
  <div class="relative mx-auto max-w-7xl px-6 lg:px-8">
    <div class="relative flex min-h-[calc(100vh-120px)] flex-col justify-center py-20 lg:py-32">

      <!-- Text content - left side -->
      <div class="relative z-10 max-w-2xl">
        <!-- Heading - Large bold typography -->
        <h1
          class="reveal text-5xl font-bold leading-[1.05] tracking-tight text-text-main md:text-6xl lg:text-7xl"
          style="transition-delay: 100ms; letter-spacing: -0.025em;"
        >
          {t(locale, "hero.title")}
          <br />
          <span class="bg-gradient-to-r from-primary-light via-primary to-primary-dark bg-clip-text text-transparent">
            Guaranteed
          </span> Support
        </h1>

        <!-- Subtitle -->
        <p
          class="reveal mt-6 max-w-lg text-lg leading-relaxed text-text-secondary lg:text-xl"
          style="transition-delay: 200ms;"
        >
          {t(locale, "hero.subtitle")}
        </p>

        <!-- CTA Button -->
        <div class="reveal mt-10" style="transition-delay: 300ms;">
          <a
            href={getWhatsAppUrl(locale)}
            target="_blank"
            rel="noopener noreferrer"
            class="group inline-flex items-center gap-3 rounded-xl bg-[#25D366] px-8 py-4 text-base font-semibold text-white shadow-lg transition-all hover:bg-[#1fb855] hover:shadow-xl hover:scale-[1.02]"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            WhatsApp Us
          </a>
        </div>
      </div>

      <!-- Hero image - positioned absolutely on right -->
      <div class="pointer-events-none absolute inset-y-0 right-0 hidden w-[55%] lg:block">
        <div class="relative h-full w-full">
          <img
            src="/images/hero-tow-truck.jpg"
            alt="TMS Bike Towing truck - 24/7 cross-border towing service"
            class="h-full w-full object-contain object-right"
          />
          <!-- Gradient fade on left edge for blend -->
          <div
            class="absolute inset-y-0 left-0 w-48 bg-gradient-to-r from-transparent to-transparent"
          ></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Flag Carousel - bottom section -->
  <div class="relative border-t border-gray-200">
    <div class="mx-auto max-w-7xl px-6 py-8 lg:px-8">
      <div class="flex items-center gap-8">
        <p class="shrink-0 text-sm text-text-secondary">
          {t(locale, "hero.carousel_label")}
        </p>
        <div class="min-w-0 flex-1">
          <FlagCarousel client:visible dark={false} />
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile background image -->
  <div class="pointer-events-none absolute inset-0 lg:hidden">
    <img
      src="/images/hero-tow-truck.jpg"
      alt=""
      class="h-full w-full object-cover object-center opacity-20"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-white via-white/80 to-transparent"></div>
  </div>
</section>
