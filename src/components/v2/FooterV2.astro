---
/**
 * V2 Footer - Dark 4-column layout with newsletter
 * Based on stitch_tms_landing_page mockups
 */
const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { label: "Cross-Border Towing", href: "/v2/towing" },
    { label: "Thailand Packages", href: "/v2/towing#packages" },
    { label: "Insurance Plans", href: "/v2/insurance" },
    { label: "Emergency Support", href: "tel:+66968873125" },
  ],
  company: [
    { label: "About Us", href: "/v2/about" },
    { label: "Our Coverage", href: "/v2/#coverage" },
    { label: "Contact", href: "/v2/about#contact" },
  ],
  legal: [
    { label: "Terms of Service", href: "#" },
    { label: "Privacy Policy", href: "#" },
    { label: "Cookie Policy", href: "#" },
  ],
};

const socialLinks = [
  { icon: "fab fa-facebook-f", href: "https://facebook.com/tmstowing", label: "Facebook" },
  { icon: "fab fa-line", href: "https://line.me/ti/p/~tms_towing", label: "LINE" },
];
---

<footer class="bg-[#0A121E] text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <!-- Main Footer Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="col-span-2 md:col-span-1">
        <a href="/v2/" class="flex items-center gap-2 mb-4">
          <div class="w-10 h-10 bg-[#0052CC] rounded-lg flex items-center justify-center">
            <span class="material-symbols-outlined text-white text-xl">two_wheeler</span>
          </div>
          <span class="font-bold text-lg">TMS Towing</span>
        </a>
        <p class="text-gray-400 text-sm leading-relaxed mb-6">
          Professional cross-border towing and insurance services across Thailand, Malaysia, and Singapore.
        </p>
        <!-- Social Links -->
        <div class="flex gap-3">
          <a
            href="https://facebook.com/tmstowing"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-[#0052CC] transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a
            href="https://line.me/ti/p/~tms_towing"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-[#06C755] transition-colors"
            aria-label="LINE"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19.365 9.863c.349 0 .63.285.63.631 0 .345-.281.63-.63.63H17.61v1.125h1.755c.349 0 .63.283.63.63 0 .344-.281.629-.63.629h-2.386c-.345 0-.627-.285-.627-.629V8.108c0-.345.282-.63.627-.63h2.386c.349 0 .63.285.63.63 0 .349-.281.63-.63.63H17.61v1.125h1.755zm-3.855 3.016c0 .27-.174.51-.432.596-.064.021-.133.031-.199.031-.211 0-.391-.09-.51-.25l-2.443-3.317v2.94c0 .344-.279.629-.631.629-.346 0-.626-.285-.626-.629V8.108c0-.27.173-.51.43-.595.06-.023.136-.033.194-.033.195 0 .375.104.495.254l2.462 3.33V8.108c0-.345.282-.63.63-.63.345 0 .63.285.63.63v4.771zm-5.741 0c0 .344-.282.629-.631.629-.345 0-.627-.285-.627-.629V8.108c0-.345.282-.63.627-.63.349 0 .631.285.631.63v4.771zm-2.466.629H4.917c-.345 0-.63-.285-.63-.629V8.108c0-.345.285-.63.63-.63.349 0 .63.285.63.63v4.141h1.756c.348 0 .629.283.629.63 0 .344-.281.629-.629.629M24 10.314C24 4.943 18.615.572 12 .572S0 4.943 0 10.314c0 4.811 4.27 8.842 10.035 9.608.391.082.923.258 1.058.59.12.301.079.766.038 1.08l-.164 1.02c-.045.301-.24 1.186 1.049.645 1.291-.539 6.916-4.078 9.436-6.975C23.176 14.393 24 12.458 24 10.314"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services Column -->
      <div>
        <h3 class="font-semibold text-sm uppercase tracking-wider text-gray-400 mb-4">Services</h3>
        <ul class="space-y-3">
          {footerLinks.services.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-300 hover:text-white text-sm transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Column -->
      <div>
        <h3 class="font-semibold text-sm uppercase tracking-wider text-gray-400 mb-4">Company</h3>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-300 hover:text-white text-sm transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Newsletter Column -->
      <div class="col-span-2 md:col-span-1">
        <h3 class="font-semibold text-sm uppercase tracking-wider text-gray-400 mb-4">Stay Updated</h3>
        <p class="text-gray-400 text-sm mb-4">Get updates on new services and coverage areas.</p>
        <form class="flex gap-2" onsubmit="return false;">
          <input
            type="email"
            placeholder="Your email"
            class="flex-1 px-4 py-2.5 bg-white/10 border border-white/20 rounded-lg text-sm text-white placeholder-gray-400 focus:outline-none focus:border-[#0052CC] focus:ring-1 focus:ring-[#0052CC] transition-colors"
          />
          <button
            type="submit"
            class="px-4 py-2.5 bg-[#0052CC] hover:bg-[#003d99] text-white text-sm font-medium rounded-lg transition-colors"
          >
            <span class="material-symbols-outlined text-lg">send</span>
          </button>
        </form>
      </div>
    </div>

    <!-- Divider -->
    <hr class="my-8 border-white/10" />

    <!-- Bottom Bar -->
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-gray-400 text-sm">
        &copy; {currentYear} TMS Bike Towing. All rights reserved.
      </p>
      <div class="flex gap-6">
        {footerLinks.legal.map((link) => (
          <a
            href={link.href}
            class="text-gray-400 hover:text-white text-sm transition-colors"
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
