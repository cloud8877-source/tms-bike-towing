{
  "name": "temp-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:a11y": "playwright test tests/e2e/accessibility.spec.ts",
    "lint:links": "linkinator ./dist --recurse --skip '^https://wa.me' --skip '^tel:' --format csv > ./reports/link-check.csv",
    "lint:lighthouse": "lhci autorun",
    "qa": "npm run build && npm run test && npm run lint:links && npm run lint:lighthouse",
    "qa:full": "npm run build && npm run test && npm run test:e2e && npm run lint:links && npm run lint:lighthouse",
    "check:i18n": "vitest run tests/unit/i18n-completeness.test.ts",
    "check:build": "vitest run tests/unit/build-validation.test.ts",
    "check:seo": "vitest run tests/unit/seo-validation.test.ts"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/sitemap": "^3.7.0",
    "@astrojs/svelte": "^7.2.5",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.17.0",
    "gsap": "^3.14.2",
    "lucide-svelte": "^0.563.0",
    "svelte": "^5.49.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.58.1",
    "@vitest/ui": "^4.0.18",
    "happy-dom": "^20.4.0",
    "linkinator": "^7.5.3",
    "vitest": "^4.0.18"
  }
}
